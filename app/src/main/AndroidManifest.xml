<?xml version="1.0" encoding="utf-8"?><!-- android:roundIcon="@mipmap/ic_launcher_round" --> <!-- android:theme="@style/FullscreenTheme" android:theme="@style/FullscreenTheme"-->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cloud.cloudcontrol">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".FullscreenActivityStartupScreen"

            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".BluetoothConnection"
                android:screenOrientation="portrait" >

        </activity>

    </application>

</manifest>